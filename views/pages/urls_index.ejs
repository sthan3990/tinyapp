<!DOCTYPE html>
<html lang="en">

<head>
  <link href="/styles/theme.css" rel="stylesheet" type="text/css">

  <%- include('../partials/_header') %>
    <title>TinyApp | All URLs</title>
</head>

<body>

  <div class="row">

    <div class="main-wrapper ">

      <div class="row">

        <div class="section-wrapper">

          <div class="nav-wrapper">
            <%- include('../partials/_navMember') %>
          </div>

          <main>

            <div class="form-content">

              <div class="form-items">

                <div class="row">
                  <h3>Welcome</h3>
                </div>
                <div class="row">
                  <p>Username: <%= username %></p>
                </div>
                <div class="row">
                  <p>Email: <%= email %></p>
                </div>

                <div class="form-title">
                  <h3>URLs Table Summary</h3>
                </div>

                <table class="table table-dark table-lg">

                  <thead>
                    <tr>
                      <th>Short URL</th>
                      <th>Long URL</th>
                      <th>Edit</th>
                      <th>Delete</th>
                      <th>Visits</th>
                      <th></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% for (let url in urls) { %>
                      <tr>
                        <td>
                            <%= url %>
                        </td>
                        <td>
                          <%= urls[url].longURL %>
                        </td>
                        <td>
                          <form action="/urls/<%= url %>/edit" method="GET">
                            <Button class="btn btn-primary">Edit</Button>
                          </form>
                        </td>
                        <td>
                          <form action="/urls/<%= url %>/delete" method="POST">
                            <Button class="btn btn-primary">Delete</Button>
                          </form>
                        </td>
                        <td>
                          <%= urls[url].vists %>
                        </td>
                        <td>
                        <a href="/urls/visit/<%= url %>" target="_blank">Visit</a>
                        </td>
                      </tr>
                      <% } %>
                  </tbody>
                </table>
          </main>

        </div>

      </div>

      <%- include('../partials/_footer') %>

    </div>



  </div>

</body>

</html>